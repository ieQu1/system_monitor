%% -*- mode:erlang -*-
{erl_opts,
 [debug_info, warnings_as_errors]}.

{deps,
 [ {supervisor3, "1.1.9"}
 , {epgsql, "4.5.0"}
 , {snabbkaffe, {git, "https://github.com/kafka4beam/snabbkaffe", {tag, "0.18.0"}}}
 ]}.

{dialyzer, [{warnings, [unknown]}]}.

{profiles,
 [ {test, [ {deps, [ {proper, "1.3.0"}
                   ]}
          , {cover_enabled, true}
          ]}
 , {dev,
    [{plugins, [rebar3_hex]}]}
 ]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.
